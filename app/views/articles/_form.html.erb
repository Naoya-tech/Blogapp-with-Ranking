<div id="article_wrap">
  <%= form_with model: @article, local: true do |f| %>
    <%= f.hidden_field :name, :value => current_user.email %>
    <div>
      タイトル
      <br><%= f.text_field :title, id: "article_title"%><br>
    </div>
    <div>
      記事内容
      <br><%= f.text_area :body, id: "article_content"  %><br>
    </div>
    <%= f.submit "#{@form_name} Article" %>
  <% end %>
</div>
<div class="clear"></div>